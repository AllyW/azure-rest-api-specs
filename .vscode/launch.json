  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/syntax.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}"
    },
    {
      "name": "tsp compile aaz",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["compile", "${workspaceFolder}/specification/mongocluster/DocumentDB.MongoCluster.Management/main.tsp"],
      "runtimeExecutable": "tsp",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
    },
    {
      "name": "tsp compile community",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["compile", "${workspaceFolder}/specification/communitytraining/Community.Management/main.tsp"],
      "runtimeExecutable": "tsp",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
    }
  ]
}
